<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Inferno Camp", sticky: false, time: 2000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Inferno Camp", sticky: false, time: 2000) %>
<% else %>
  <%= js add_gritter(flash[:notice], :title => "Inferno Camp", sticky: false, time: 2000) %>  
<% end %>  