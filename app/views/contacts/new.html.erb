<div class="home-bg">
  <div class="container">
    <div class="row">
        <div class="col-md-1">
        </div>  
         <div class="col-md-10" id="contact-card"> 
          <div class="card bg-light">
            <div class="card-body">


           <div class="container" id="contact-form">
              <h2 class="text-center">Contact Us</h2>
              <hr>
              <p class="text-muted">
                Do you have questions about the site? Or maybe you have a suggestion for a course. Shoot us an email and well get back to you ASAP. 
              </p>  
              <%= form_for @contact do |form| %>
                <div class="form-group">
                  <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
                </div>
                <div class="form-group">
                  <%= form.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
                </div>
                <div class="form-group">
                  <%= form.email_field :email, class: 'form-control', placeholder: 'Email' %>
                </div>
                <div class="form-group">
                  <%= form.text_area :message, class: 'form-control', placeholder: 'Message', rows: 5 %>
                </div>
                <div class="hidden">
                  <%= form.text_field :nickname, hint: 'leave this field blank' %>
                </div>
                <div class="form-group">
                  <%= form.submit 'Send Message', class: 'btn btn-primary btn-block' %>
                </div>
              <% end %>
            </div>
            </div>
          </div>
         </div>
        <div class="col-md-1">
        </div>
    </div>
  </div>
</div>